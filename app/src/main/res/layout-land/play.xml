<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dip"
    android:orientation="horizontal">
    <include
        android:id="@+id/includeboard"
        layout="@layout/chessboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dip">
        <TableLayout
            android:id="@+id/LayoutBoardTop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:layout_alignParentTop="true"
            android:padding="4dip">
            <TableRow android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ImageTurnOpp"
                    android:src="@drawable/turnempty"
                    android:layout_height="12dip"
                    android:layout_width="12dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:focusable="true"
                    android:importantForAccessibility="yes"/>

                <TextView
                    android:id="@+id/TextViewClockTimeOpp"
                    android:layout_height="wrap_content"
                    android:layout_width="50dip"
                    android:text="00:00"
                    android:importantForAccessibility="no"
                    style="@style/MyNormalTextStyle" />

                <TextView
                    android:id="@+id/TextViewOpponent"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    style="@style/MyNormalTextStyle"
                    android:text="Title..."
                    android:importantForAccessibility="no"
                    />

                <jwtc.android.chess.views.ChessPiecesStackView
                    android:layout_width="wrap_content"
                    android:layout_height="24dip"
                    android:layout_weight="2"
                    android:layout_marginRight="1dip"
                    android:importantForAccessibility="no"
                    android:id="@+id/topPieces" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/LayoutBoardBottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:layout_alignParentBottom="true"
            android:padding="4dip">
            <TableRow android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ImageTurnMe"
                    android:src="@drawable/turnempty"
                    android:layout_height="12dip"
                    android:layout_width="12dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"/>

                <TextView
                    android:id="@+id/TextViewClockTimeMe"
                    android:layout_height="wrap_content"
                    android:layout_width="50dip"
                    android:text="00:00"
                    android:importantForAccessibility="no"
                    style="@style/MyNormalTextStyle" />

                <TextView
                    android:id="@+id/TextViewMe"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    style="@style/MyNormalTextStyle"
                    android:text="Title..."
                    android:importantForAccessibility="no"
                    />

                <jwtc.android.chess.views.ChessPiecesStackView
                    android:layout_width="wrap_content"
                    android:layout_height="24dip"
                    android:layout_weight="2"
                    android:importantForAccessibility="no"
                    android:id="@+id/bottomPieces" />
            </TableRow>

        </TableLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/LayoutBoardTop"
            android:layout_above="@id/LayoutBoardBottom"
            android:padding="4dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/LayoutEngineInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        style="@style/MyRowStyle">
                        <RelativeLayout
                            android:id="@+id/LayoutPlayButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageButton
                                android:id="@+id/ButtonPlay"
                                android:src="@drawable/ic_robot"
                                android:contentDescription="@string/button_engine_play_description"
                                style="@style/ChessImageButton" />

                            <ProgressBar
                                android:id="@+id/ProgressBarPlay"
                                android:layout_width="40dip"
                                android:layout_height="40dip"
                                style="?android:attr/progressBarStyleLarge"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/TextViewLastMove"
                            style="@style/MySmallTextStyle"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:scrollHorizontally="false"
                            android:singleLine="false"
                            android:minLines="2"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:paddingLeft="4dip"
                            android:paddingRight="4dip"
                            android:layout_marginLeft="8dip"
                            android:layout_marginRight="8dip"
                            android:background="@color/paneBackgroundColor"/>

                        <ImageButton android:id="@+id/ButtonMenu"
                            android:src="@drawable/ic_three_dots_vertical"
                            android:contentDescription="@string/button_menu_description"
                            style="@style/ChessImageButton"/>

                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        style="@style/MyRowStyle">
                        <ImageButton
                            android:id="@+id/ButtonPrevious"
                            android:src="@drawable/ic_chevron_left"
                            android:contentDescription="@string/button_previous_move_description"
                            style="@style/ChessImageButton" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/HistoryRecyclerView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dip"
                            android:layout_marginRight="8dip"
                            android:orientation="horizontal"
                            android:scrollbars="horizontal"
                            android:fadeScrollbars="false"
                            android:background="@color/paneBackgroundColor"
                            android:scrollbarAlwaysDrawHorizontalTrack="true"/>
                        <ImageButton
                            android:id="@+id/ButtonNext"
                            android:src="@drawable/ic_chevron_right"
                            android:contentDescription="@string/button_next_move_description"
                            style="@style/ChessImageButton" />
                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageButton
                        android:id="@+id/ButtonEco"
                        android:src="@drawable/ic_signpost_split"
                        android:contentDescription="ECO openings"
                        style="@style/ChessImageButton"
                        android:nextFocusLeft="@id/includeboard"
                        android:nextFocusDown="@id/SwitchBlindfold"/>
                    <TextView
                        android:id="@+id/TextViewEco"
                        android:text="--"
                        android:layout_width="fill_parent"
                        android:layout_height="38dip"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:padding="4dip"
                        android:background="@color/paneBackgroundColor"
                        />
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="center">
                    <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/SwitchBlindfold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/pref_show_blindfold"
                        android:checked="true"
                        />
                    <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/SwitchSound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/pref_sound"
                        android:checked="true"
                        />
                    <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/SwitchFlip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/menu_flip"
                        android:checked="true"
                        />
                    <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/SwitchSpeech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/pref_speech"
                        android:checked="true"
                        />
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>