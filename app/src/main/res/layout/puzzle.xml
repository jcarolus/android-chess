<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="4dip"
    android:orientation="vertical"
    android:id="@+id/LayoutMain">

    <RelativeLayout
        android:id="@+id/LayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/paneBackgroundColor">
        <ImageView
            android:id="@+id/ImageStatus"
            android:src="@drawable/ic_check_none"
            android:layout_height="40dip"
            android:layout_width="40dip"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dip"
            android:paddingRight="8dip" />
    </RelativeLayout>

    <include
        layout="@layout/chessboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="1dip"
        android:id="@+id/includeboard" />

    <TableLayout
        android:id="@+id/LayoutTurn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/paneBackgroundColor"
        android:stretchColumns="1">

        <TableRow android:gravity="center_vertical">
            <ViewSwitcher
                android:id="@+id/ImageTurn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="8dip"
                android:paddingRight="8dip">

                <ImageView
                    android:src="@drawable/turnblack"
                    android:layout_width="12dip"
                    android:layout_height="12dip" />

                <ImageView
                    android:src="@drawable/turnwhite"
                    android:layout_height="12dip"
                    android:layout_width="12dip" />
            </ViewSwitcher>

            <TextView
                android:id="@+id/TextViewPuzzleText"
                android:text=" to move, mate in "
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/MyTextStyle" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/LayoutButtons"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dip"
        android:paddingBottom="4dip">

            <ImageButton
                android:id="@+id/ButtonPuzzlePrevious"
                android:src="@drawable/ic_chevron_left"
                android:contentDescription="@string/button_previous_position"
                style="@style/ChessImageButton" />

            <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

            <Button android:id="@+id/ButtonPuzzleShow"
                android:text="@string/puzzle_show"
                android:layout_width="wrap_content"
                style="@style/ChessButton"/>

            <ImageButton
                android:id="@+id/ButtonPuzzleRetry"
                android:src="@drawable/ic_arrow_clockwise"
                android:contentDescription="@string/button_reset_position"
                style="@style/ChessImageButton" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/ButtonPuzzleNext"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/button_next_position"
                style="@style/ChessImageButton" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:text="@string/puzzle_help"></TextView>
    </ScrollView>

</LinearLayout>
