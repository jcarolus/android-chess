<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LayoutBoardBottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4dip">

    <TableRow android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ImageBottomTurn"
            android:src="@drawable/turnempty"
            android:layout_height="12dip"
            android:layout_width="12dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip" />

        <TextView
            android:id="@+id/TextViewBottomClockTime"
            android:layout_height="wrap_content"
            android:layout_width="60dip"
            android:text="00:00"
            android:importantForAccessibility="no"
            style="@style/MyHeaderTextStyle" />

        <TextView
            android:id="@+id/TextViewBottomPlayer"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/MyHeaderTextStyle"
            android:text="Title..."
            android:importantForAccessibility="no" />

        <jwtc.android.chess.views.ChessPiecesStackView
            android:layout_width="wrap_content"
            android:layout_height="24dip"
            android:layout_marginRight="1dip"
            android:id="@+id/bottomPieces" />
    </TableRow>
</TableLayout>
