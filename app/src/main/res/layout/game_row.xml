<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_optimizationLevel="none"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/paneBackgroundColor"
    android:padding="4dip">

    <TextView
        android:id="@+id/text_id"
        android:text="id"
        android:singleLine="false"
        style="@style/MyNormalTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.1"/>

    <TextView
        android:id="@+id/text_date"
        android:text="date"
        android:singleLine="false"
        style="@style/MyNormalTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_id"
        app:layout_constraintWidth_percent="0.3"/>

    <TextView
        android:id="@+id/text_event"
        android:text="event"
        android:singleLine="false"
        style="@style/MyNormalTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_date"
        app:layout_constraintWidth_percent="0.4"/>

    <RelativeLayout
        android:id="@+id/rating_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_event"
        app:layout_constraintWidth_percent="0.2">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottomBarrier"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="text_id,text_date,text_event,rating_container" />

    <TextView
        android:id="@+id/text_result"
        android:text="*"
        android:singleLine="false"
        style="@style/MyNormalTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottomBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.1"/>

    <TextView
        android:id="@+id/text_name1"
        android:text="white"
        android:singleLine="false"
        style="@style/MyNormalTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottomBarrier"
        app:layout_constraintStart_toEndOf="@id/text_result"
        app:layout_constraintWidth_percent="0.45"/>

    <TextView
        android:id="@+id/text_name2"
        android:text="black"
        android:singleLine="false"
        style="@style/MyNormalTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottomBarrier"
        app:layout_constraintStart_toEndOf="@id/text_name1"
        app:layout_constraintWidth_percent="0.45"/>

</androidx.constraintlayout.widget.ConstraintLayout>