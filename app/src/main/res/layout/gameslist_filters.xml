<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dip">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/SwitchFilterWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="White"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/MyHeaderTextStyle" />
            <EditText
                android:text="White"
                android:id="@+id/EditTextFilterWhite"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:singleLine="true"/>
        </TableRow>
        <TableRow>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/SwitchFilterBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Black"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/MyHeaderTextStyle" />
            <EditText
                android:text="Black"
                android:id="@+id/EditTextFilterBlack"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:singleLine="true" />
        </TableRow>
        <TableRow>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/SwitchFilterEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Event"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/MyHeaderTextStyle" />
            <EditText
                android:text="Event"
                android:id="@+id/EditTextFilterEvent"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:singleLine="true" />
        </TableRow>
        <TableRow>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/SwitchFilterDateAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Date after"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/MyHeaderTextStyle" />
            <Button android:id="@+id/ButtonFilterDateAfter"
                android:text="YYYY.MM.DD"
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/ChessButton"
                />
        </TableRow>
        <TableRow>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/SwitchFilterDateBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Date before"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/MyHeaderTextStyle" />
            <Button android:id="@+id/ButtonFilterDateBefore"
                android:text="YYYY.MM.DD"
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/ChessButton"
                />
        </TableRow>
        <TableRow>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/SwitchFilterResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Result"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/MyHeaderTextStyle" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="Result">

                <AutoCompleteTextView
                    android:id="@+id/AutoCompleteResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:id="@+id/TextViewFilterInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dip"
            android:text="0"/>
        <Button android:id="@+id/ButtonFilterClose"
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ChessButton"
            />
    </LinearLayout>
</LinearLayout>