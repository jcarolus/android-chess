<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ICSPlay"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableLayout
        android:id="@+id/LayoutBoardTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:shrinkColumns="0,1,2,3"
        android:stretchColumns="2"
        android:layout_marginBottom="1dip">

        <TableRow android:gravity="center_vertical">
            <ImageView
                android:id="@+id/ImageTurnOpp"
                android:src="@drawable/turnempty"
                android:layout_height="12dip"
                android:layout_width="12dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"/>
            <TextView
                android:id="@+id/TextViewClockOpp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="00:00"
                android:gravity="center_vertical"
                style="@style/MyNormalTextStyle"
                android:layout_marginLeft="8dip" />

            <TextView
                android:text="@string/ics_playertwo"
                android:id="@+id/TextViewPlayerOpp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/MyHeaderTextStyle" />

            <TextView
                android:text="----"
                android:id="@+id/TextViewRatingOpp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/MyHeaderTextStyle"
                android:layout_marginLeft="3dip" />
        </TableRow>

    </TableLayout>

    <include
        android:id="@+id/includeboard"
        layout="@layout/chessboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableLayout
        android:id="@+id/LayoutBoardBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:layout_marginTop="1dip"
        android:shrinkColumns="0,1,3"
        android:stretchColumns="2">

        <TableRow android:gravity="center_vertical">
            <ImageView
                android:id="@+id/ImageTurnMe"
                android:src="@drawable/turnempty"
                android:layout_height="12dip"
                android:layout_width="12dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"/>
            <TextView
                android:id="@+id/TextViewClockMe"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="00:00"
                android:gravity="center_vertical"
                style="@style/MyNormalTextStyle"
                android:layout_marginLeft="8dip" />

            <TextView
                android:text="@string/ics_playerone"
                android:id="@+id/TextViewPlayerMe"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/MyHeaderTextStyle" />

            <TextView
                android:text="----"
                android:id="@+id/TextViewRatingMe"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/MyHeaderTextStyle"
                android:layout_marginLeft="3dip" />
        </TableRow>
    </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TextViewLastMove"
                style="@style/MySmallTextStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:minLines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="@color/paneBackgroundColor"
                android:accessibilityLiveRegion="assertive"/>
            <LinearLayout
                android:id="@+id/LayoutPlayButtons"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip">

                <Button android:id="@+id/ButtonResign"
                    android:text="@string/ics_menu_resign"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    style="@style/ChessButton"
                    />
                <Button android:id="@+id/ButtonDraw"
                    android:text="@string/ics_menu_draw"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    style="@style/ChessButton"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>