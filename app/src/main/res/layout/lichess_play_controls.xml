<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TextViewLastMove"
            style="@style/MySmallTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@color/paneBackgroundColor"
            android:accessibilityLiveRegion="assertive"/>
        <TextView
            android:id="@+id/TextViewStatus"
            style="@style/MySmallTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@color/paneBackgroundColor"
            android:accessibilityLiveRegion="polite"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip">

            <Button android:id="@+id/ButtonResign"
                android:text="@string/ics_menu_resign"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dip"
                style="@style/ChessButton"
                />
            <Button android:id="@+id/ButtonDraw"
                android:text="@string/ics_menu_draw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dip"
                style="@style/ChessButton"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>