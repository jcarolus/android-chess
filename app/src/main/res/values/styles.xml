<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChessImageButton" parent="android:Widget.Material.ImageButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:tint">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/imagebutton_background</item>
        <item name="android:layout_width">@dimen/imageButtonSize</item>
        <item name="android:layout_height">@dimen/imageButtonSize</item>
    </style>

    <style name="ChessButton" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/surfaceTextColor</item>
        <item name="android:layout_height">@dimen/imageButtonSize</item>
        <item name="android:backgroundTint">@color/imagebutton_background</item>
    </style>

    <style name="ChessTextViewStyle" parent="android:Widget.TextView">
        <item name="android:typeface">sans</item>
    </style>

    <style name="ChessTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyTextStyle" parent="ChessTextAppearance">
        <item name="android:paddingTop">@dimen/normalPaddingY</item>
        <item name="android:paddingBottom">@dimen/normalPaddingY</item>
        <item name="android:paddingLeft">@dimen/normalPaddingX</item>
        <item name="android:paddingRight">@dimen/normalPaddingX</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>

    <style name="MyHeaderTextStyle" parent="@style/MyTextStyle">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:paddingTop">@dimen/headerPaddingY</item>
        <item name="android:paddingBottom">@dimen/headerPaddingY</item>
        <item name="android:paddingLeft">@dimen/headerPaddingX</item>
        <item name="android:paddingRight">@dimen/headerPaddingX</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/MyTextStyle">
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="MyLabelTextStyle">
        <item name="android:typeface">sans</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyNormalTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyRowTextStyle" parent="@style/MyTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MySmallTextStyle">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CaptureImageStyle">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>

    <style name="CaptureTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_height">wrap_content</item><!-- 14dip -->
        <item name="android:layout_width">30dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CaptureTextStyleSmall" parent="@style/CaptureTextStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="MyRowStyle">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ChessDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryVariantColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnSurface">@color/surfaceTextColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
    </style>
</resources>