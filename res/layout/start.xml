<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/jwtc.android.chess"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/bgColor"
	>
	
	<TableLayout android:id="@+id/LaoutAppTop"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:stretchColumns="0" android:background="@color/bgColorText" android:padding="10dip" 
	>
		<TableRow>
			<TextView android:text="@string/app_name" android:layout_gravity="center_vertical" 
				style="@style/MyTitleTextStyle"
			/>
			<ImageView android:src="@drawable/chess" />
		</TableRow>
	</TableLayout>
	<ScrollView android:layout_below="@+id/LaoutAppTop" 
	    android:layout_alignParentBottom="true"
	    android:layout_width="fill_parent" android:layout_height="fill_parent"
	    android:layout_marginTop="2dip" 
	    android:background="@color/bgColorText"
	>
		<TableLayout 
		    android:paddingTop="10dip" android:paddingBottom="10dip"
		    android:layout_width="fill_parent" android:gravity="center"
		    android:layout_height="wrap_content">
		    <TableRow>
	
			    <Button
			        android:id="@+id/StartButtonPlay"
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_margin="10dip"
			        android:layout_weight="1"
			        android:padding="10dip"
			        android:shadowRadius="2"
			        android:text="@string/start_play" />
	
			    <Button android:id="@+id/StartButtonPractice" android:text="@string/start_practice"
			        android:layout_margin="10dip" android:padding="10dip"
				    android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"    
			    />
		    </TableRow>
		    <TableRow>
			    <Button android:id="@+id/StartButtonPuzzles" android:text="@string/start_puzzles"
			        android:layout_margin="10dip" android:padding="10dip"
				    android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"    
			    />
			    <Button android:id="@+id/StartButtonICS" android:text="@string/start_ics"
			        android:layout_margin="10dip" android:padding="10dip"
				    android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"    
			    />
		    </TableRow>
		    <TableRow>
			    <Button android:id="@+id/StartButtonPreferences" android:text="@string/start_globalpreferences"
			        android:layout_margin="10dip" android:padding="10dip"
				    android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"    
			    />
			    <Button android:id="@+id/StartButtonHelp" android:text="@string/menu_help"
			        android:layout_margin="10dip" android:padding="10dip"
				    android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"
			    />
			    
			 </TableRow>
		    <TableRow>
			    <Button android:id="@+id/StartButtonAdvanced" android:text="@string/start_pgn"
			        android:layout_margin="10dip" android:padding="10dip"
				    android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"    
			    />
			 <Button android:id="@+id/StartButtonConvergence" android:text="@string/start_convergence"
			        android:layout_margin="10dip" android:padding="10dip"
				    android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1"    
			    />    
			    <!-- 
			    <View android:layout_width="0dip" android:layout_height="10dip" android:layout_weight="1"
			        android:layout_margin="10dip" android:padding="10dip"/>
			        -->
		    </TableRow> 
		</TableLayout>
	</ScrollView>
	<!-- 
	<ListView android:id="@android:id/list"
		android:layout_below="@+id/LaoutAppTop"
		android:layout_alignParentBottom="true"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:background="@color/bgColor"
	    android:drawSelectorOnTop="false"
	    android:entries="@array/start_menu"
	/>
	 -->
</RelativeLayout>